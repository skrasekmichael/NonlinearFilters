<Window x:Class="NonlinearFilters.APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NonlinearFilters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="35"/>
		</Grid.RowDefinitions>

		<Image x:Name="InputImage" Margin="5"/>
		<Image x:Name="OutputImage" Grid.Column="1" Margin="5" />

		<Grid Grid.Row="1" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="100"/>
			</Grid.ColumnDefinitions>
			
			<ProgressBar Margin="5" Name="ProgressBar"/>
			<Button Grid.Column="1" Margin="5" Content="Apply" Click="BtnApplyFilter_Click"/>
			<Button Grid.Column="2" Margin="5" Content="Open" Click="BtnOpen_Click"/>
		</Grid>
	</Grid>
</Window>
